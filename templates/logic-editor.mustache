{{!
    @template qtype_logic/logic-editor
}}

<h1>{{question_name}}</h1>
<p>{{{question_text}}}</p>

<div style="width: 100%; height: 40rem; max-height: 40rem;">
    <logic-editor singleton="" mode="full" id="logic-editor">
        <script type="application/json5">
            {{#answer_value}}
                {{{answer_value}}}
            {{/answer_value}}

            {{^answer_value}}
                {{{init_state}}}
            {{/answer_value}}
        </script>
    </logic-editor>
</div>

<button
    id="circuit-run-test-button"
    type="button"
    class="btn btn-primary"
    aria-label="Run tests"
    style="margin: 1rem">
    Run tests
</button>

<button
    id="circuit-reset-button"
    type="button"
    class="btn btn-warning"
    aria-label="Reset circuit"
    style="margin: 1rem"
    data-init-state="{{init_state}}">
    Reset the circuit
</button>

<input
    type="text"
    name="{{answer_name}}"
    id="answer"
    value="{{answer_value}}"
    style="display: none;">
<input
    type="text"
    id="test-results"
    value="{{test_results_value}}"
    data-test-results="{{test_results_value}}"
    style="display: none;">

<div class="data-container" question-id-param="{{question_id}}" question-attempt-id-param="{{question_attempt_id}}" >
    <h1>DEBUG</h1>
    <p>QUESTION_ID: {{question_id}}</p>
    <p>QUESTION_ATTEMPT_ID: {{question_attempt_id}}</p>
    <p>INIT STATE: {{{init_state}}}</p>
    <p>INPUT NAME: {{answer_name}}</p>
    <p>ANSWER: {{answer_value}}</p>
</div>
