{{!
    @template qtype_logic/logic-editor
}}

<h1>{{question_name}}</h1>
<p>{{{question_text}}}</p>

<div style="width: 100%; height: 40rem; max-height: 40rem;">
    <logic-editor mode="full" id="logic-editor">
        <script type="application/json5">
            {{#answer_value}}
                {{{answer_value}}}
            {{/answer_value}}

            {{^answer_value}}
                {{{init_state}}}
            {{/answer_value}}
        </script>
    </logic-editor>
</div>

<div class="d-flex justify-content-between">
    <button
        id="circuit-run-test-button"
        type="button"
        class="btn btn-primary"
        aria-label="Run tests"
        style="margin: 1rem">
        Run tests
    </button>

    <button
        id="circuit-reset-button"
        type="button"
        class="btn btn-warning"
        aria-label="Reset circuit"
        style="margin: 1rem"
        data-init-state="{{init_state}}">
        Reset the circuit
    </button>
</div>

<input
    type="text"
    name="{{answer_name}}"
    id="answer"
    value="{{answer_value}}"
    style="display: none;">
<input
    type="text"
    name="{{test_results_name}}"
    id="test-results"
    value="{{test_results_value}}"
    data-test-results="{{test_results_value}}"
    style="display: none;">

